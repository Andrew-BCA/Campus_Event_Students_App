<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard">


    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="410dp"
        android:layout_height="700dp"
        android:clipToOutline="true"
        android:paddingLeft="40dp"
        android:paddingTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/viewevent"
        android:layout_width="211dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:hint="View Added Events"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button" />
        
    <TextView
        android:id="@+id/viewnotify"
        android:layout_width="211dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/viewevent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:hint="View Messages"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button" />
    <TextView
        android:id="@+id/viewpart"
        android:layout_width="211dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/viewnotify"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:hint="View Participation History"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

</RelativeLayout>
</RelativeLayout>
